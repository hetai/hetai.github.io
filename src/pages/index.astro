---
import Layout from '../layouts/Layout.astro';
import Profile from '../components/Profile.astro';
import Section from '../components/Section.astro';
import SkillCard from '../components/SkillCard.astro';
import ProjectCard from '../components/ProjectCard.astro';

const skills = [
  {
    category: "编程语言",
    skills: ["JavaScript", "TypeScript", "Python", "Java"]
  },
  {
    category: "前端开发",
    skills: ["React", "Vue", "HTML5", "CSS3", "Tailwind CSS"]
  },
  {
    category: "后端开发",
    skills: ["Node.js", "Express", "Spring Boot"]
  },
  {
    category: "数据库",
    skills: ["MySQL", "MongoDB", "PostgreSQL"]
  },
  {
    category: "开发工具",
    skills: ["Git", "Docker", "VS Code", "IntelliJ IDEA"]
  },
  {
    category: "其他技能",
    skills: ["RESTful API", "微服务架构", "CI/CD", "敏捷开发"]
  }
];

const projects = [
  {
    title: "个人项目 1",
    description: "项目描述和技术栈介绍",
    link: "#"
  },
  {
    title: "个人项目 2",
    description: "项目描述和技术栈介绍",
    link: "#"
  }
];
---

<Layout title="个人简历 - 全栈开发工程师">
  <main class="max-w-4xl mx-auto px-4 py-16">
    <Profile
      name="您的姓名"
      title="全栈开发工程师"
      avatarUrl="https://github.com/yourusername.png"
    />

    <Section title="关于我">
      <p class="text-gray-600 leading-relaxed">
        我是一名充满热情的全栈开发工程师，拥有丰富的Web开发经验。
        擅长使用现代化的技术栈进行开发，包括但不限于React、Vue、Node.js等。
        具有良好的代码风格和团队协作能力，热衷于学习新技术并解决具有挑战性的问题。
      </p>
    </Section>

    <Section title="技能专长">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {skills.map(skill => (
          <SkillCard {...skill} />
        ))}
      </div>
    </Section>

    <Section title="工作经历">
      <div class="space-y-6">
        <div class="border-l-4 border-gray-200 pl-4">
          <h3 class="font-semibold text-lg">公司名称</h3>
          <p class="text-gray-500 text-sm">职位 | 2020年 - 至今</p>
          <ul class="list-disc list-inside text-gray-600 mt-2 space-y-1">
            <li>工作职责描述</li>
            <li>项目成果描述</li>
            <li>技术栈使用情况</li>
          </ul>
        </div>
      </div>
    </Section>

    <Section title="教育背景">
      <div class="border-l-4 border-gray-200 pl-4">
        <h3 class="font-semibold text-lg">学校名称</h3>
        <p class="text-gray-500">专业名称 | 2016年 - 2020年</p>
        <p class="text-gray-600 mt-2">主修课程和学习成果描述</p>
      </div>
    </Section>

    <Section title="个人项目">
      <div class="grid gap-4">
        {projects.map(project => (
          <ProjectCard {...project} />
        ))}
      </div>
    </Section>

    <Section title="联系方式">
      <div class="flex flex-col space-y-2 text-gray-600">
        <p>📧 邮箱：your.email@example.com</p>
        <p>📱 电话：+86 xxx xxxx xxxx</p>
        <p>💼 领英：linkedin.com/in/yourprofile</p>
        <p>🐙 GitHub：github.com/yourusername</p>
      </div>
    </Section>
  </main>
</Layout>