---
interface Props {
  name: string;
  title: string;
  avatarUrl: string;
}

const { name, title, avatarUrl } = Astro.props;
---

<div class="text-center mb-12">
  <img
    src={avatarUrl}
    alt={name}
    class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
  />
  <h1 class="text-4xl font-bold mb-2">{name}</h1>
  <p class="text-xl text-gray-600">{title}</p>
</div>